<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}} - PostScape</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <meta name="csrf-token" content="{{csrfToken}}">
</head>

<body>

    {{> navbar}}

    {{{body}}}

    <!-- Minimalist Footer -->
    <footer class="mt-5 py-3 border-top bg-light text-secondary" style="font-size: 0.85rem;">
        <div class="container">
            <div class="row text-center align-items-center">
                <div class="col-md-4 text-md-start mb-1 mb-md-0">
                    <span class="fw-bold">Postscape - Dijital Hafızanız</span>
                </div>
                <div class="col-md-4 mb-1 mb-md-0">
                    <span>2025 © Postscape</span>
                </div>
                <div class="col-md-4 text-md-end">
                    <span>Ziyaretçi Sayısı: <strong>{{totalUsers}}</strong></span>
                </div>
            </div>
        </div>
    </footer>

    <style>
        /* Modal arkasındaki çift katman sorununu manuel çözer */
        .modal-backdrop+.modal-backdrop {
            display: none !important;
            /* İkinci gölgeyi asla gösterme */
        }
    </style>

    {{> save-modal}}
    {{> share-modal}}

    <!-- Delete All Notifications Verification Modal -->
    <div class="modal fade" id="deleteNotifModal" tabindex="-1" data-bs-backdrop="true" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered shadow">
            <div class="modal-content border-0">
                <div class="modal-header border-0">
                    <h5 class="modal-title fw-bold">Bildirimleri Temizle</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center py-4">
                    <i class="fas fa-trash-alt text-danger mb-3" style="font-size: 3rem;"></i>
                    <p class="mb-0 fw-bold">Tüm bildirimleri silmek istediğine emin misin?</p>
                    <p class="text-muted small mt-2">Bu işlem geri alınamaz ve tüm bildirim geçmişin silinir.</p>
                </div>
                <div class="modal-footer border-0 justify-content-center">
                    <button type="button" class="btn btn-light rounded-pill px-4"
                        data-bs-dismiss="modal">Vazgeç</button>
                    <button type="button" id="confirmDeleteAllBtn" class="btn btn-danger rounded-pill px-4">Evet,
                        Hepsini Sil</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        const onlineEl = document.getElementById('online-count');

        socket.on('updateOnlineCount', (count) => {
            if (onlineEl) {
                // Update count
                onlineEl.innerText = count;

                // Premium Green Flash Effect
                onlineEl.style.color = "#28a745";
                onlineEl.style.transition = "all 0.3s ease";
                onlineEl.style.textShadow = "0 0 8px rgba(40, 167, 69, 0.5)";

                setTimeout(() => {
                    onlineEl.style.color = "";
                    onlineEl.style.textShadow = "none";
                }, 800);
            }
        });
    </script>
</body>

</html>