<div class="container py-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm mb-4 sticky-top" style="top: 80px;">
                <div class="card-body p-4 text-center">
                    <div class="mb-3">
                        <div class="bg-dark text-white rounded-circle d-inline-flex align-items-center justify-content-center shadow-sm"
                            style="width: 100px; height: 100px; font-size: 2.5rem;">
                            {{initials user.firstName}}
                        </div>
                    </div>

                    <h3 class="fw-bold mb-0">{{user.firstName}} {{user.lastName}}</h3>
                    <p class="text-primary small mb-2">@{{user.nickname}} | {{user.jobTitle}} ({{user.age}})</p>
                    <p class="text-muted mx-auto mb-3" style="max-width: 600px;">{{user.bio}}</p>

                    <div class="d-flex justify-content-center gap-3 mb-4">
                        {{#if user.linkedinUrl}}
                        <a href="{{user.linkedinUrl}}" target="_blank" class="text-dark"><i
                                class="fab fa-linkedin fa-lg"></i></a>
                        {{/if}}
                        {{#if user.githubUrl}}
                        <a href="{{user.githubUrl}}" target="_blank" class="text-dark"><i
                                class="fab fa-github fa-lg"></i></a>
                        {{/if}}
                    </div>

                    <hr>
                    <div class="row text-center mt-3">
                        <div class="col border-end">
                            <h5 class="fw-bold mb-0 text-primary">{{collectionsCount}}</h5>
                            <small class="text-muted">Collections</small>
                        </div>
                        <div class="col">
                            <h5 class="fw-bold mb-0 text-success">{{likedPosts.length}}</h5>
                            <small class="text-muted">Extracted Likes</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-bottom-0 pt-4 px-4">
                    <ul class="nav nav-tabs card-header-tabs" id="dashboardTabs" role="tablist">
                        <li class="nav-item">
                            <button class="nav-link active fw-bold text-danger" id="liked-tab" data-bs-toggle="tab"
                                data-bs-target="#liked-content" type="button">
                                <i class="fas fa-heart me-2"></i>Liked Posts
                            </button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link fw-bold text-primary" id="saved-tab" data-bs-toggle="tab"
                                data-bs-target="#saved-content" type="button">
                                <i class="fas fa-bookmark me-2"></i>Saved Posts
                            </button>
                        </li>
                    </ul>
                </div>

                <div class="card-body p-4">
                    <div class="tab-content" id="dashboardTabsContent">

                        <div class="tab-pane fade show active" id="liked-content" role="tabpanel">
                            <div class="row row-cols-1 row-cols-md-3 g-3">
                                {{#each likedPosts}}
                                <div class="col">
                                    <div class="card h-100 border shadow-none">
                                        <img src="{{image}}" class="card-img-top"
                                            style="height: 100px; object-fit: cover;">
                                        <div class="card-body p-2">
                                            <h6 class="small fw-bold text-truncate mb-0">{{title}}</h6>
                                        </div>
                                    </div>
                                </div>
                                {{/each}}
                                {{#unless likedPosts.length}}
                                <div class="col-12">
                                    <div class="d-flex flex-column align-items-center justify-content-center py-5"
                                        style="width: 100%;">
                                        <i class="fas fa-heart-broken fa-2x text-muted mb-2 opacity-50"></i>
                                        <span class="text-muted fw-semibold">No liked posts in this section.</span>
                                    </div>
                                </div>
                                {{/unless}}
                            </div>
                        </div>

                        <div class="tab-pane fade" id="saved-content" role="tabpanel">
                            <div class="row row-cols-1 row-cols-md-3 g-4">
                                {{#each collections}}
                                <div class="col">
                                    <a href="/collections/{{_id}}"
                                        class="card h-100 border-0 shadow-sm text-decoration-none folder-card">
                                        <div class="position-relative" style="height: 120px;">
                                            <img src="{{coverImage}}" class="card-img-top h-100 w-100 shadow-sm"
                                                style="object-fit: cover; border-radius: 8px 8px 0 0;">
                                            <span class="badge bg-dark position-absolute top-0 end-0 m-2">
                                                {{#if this.posts}}
                                                {{this.posts.length}} {{#if (eq this.posts.length
                                                1)}}item{{else}}items{{/if}}
                                                {{else}}
                                                0 items
                                                {{/if}}
                                            </span>
                                        </div>
                                        <div class="card-body p-2">
                                            <h6 class="fw-bold mb-0 text-dark">{{name}}</h6>
                                        </div>
                                    </a>
                                </div>
                                {{/each}}
                                {{#unless collections.length}}
                                <div class="col-12">
                                    <div class="col-12">
                                        <div class="d-flex flex-column align-items-center justify-content-center py-5"
                                            style="width: 100%;">
                                            <i class="fas fa-folder-open fa-2x text-muted mb-2 opacity-50"></i>
                                            <span class="text-muted fw-semibold">No saved posts in this section.</span>
                                        </div>
                                    </div>
                                    {{/unless}}
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>