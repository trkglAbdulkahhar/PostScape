<div class="dropdown">
    <a class="btn nav-link position-relative text-light" href="#" id="notifDropdown" data-bs-toggle="dropdown"
        aria-expanded="false" onclick="resetNotificationCount()">
        <i class="fas fa-bell fa-lg"></i>

        {{#if unreadCount}}
        <span id="notif-badge" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"
            style="font-size: 0.6rem; padding: 0.25em 0.45em; border: 2px solid #212529;">
            {{unreadCount}}
        </span>
        {{/if}}
    </a>

    <ul class="dropdown-menu dropdown-menu-end shadow border-0 mt-2" aria-labelledby="notifDropdown"
        style="width: 280px; max-height: 400px; overflow-y: auto;">
        <li class="px-3 py-2 border-bottom d-flex justify-content-between align-items-center">
            <h6 class="mb-0 fw-bold">Notifications</h6>
            <button onclick="deleteAllNotifications()"
                class="btn btn-sm btn-link text-danger text-decoration-none p-0">Delete All</button>
        </li>

        {{#if notifications.length}}
        {{#each notifications}}
        <li>
            <a class="dropdown-item py-2 {{#unless this.read}}bg-light{{/unless}}"
                href="{{#if (eq this.type 'like')}}/posts/{{this.post}}{{else}}#{{/if}}">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <i
                            class="fas {{#if (eq this.type 'follow')}}fa-user-plus text-primary{{else}}fa-heart text-danger{{/if}}"></i>
                    </div>
                    <div class="ms-3">
                        <p class="mb-0 small"><strong>{{this.sender.name}}</strong> {{#if (eq this.type
                            'follow')}}started following you{{else}}liked your post{{/if}}</p>
                        <small class="text-muted">{{formatDate this.createdAt}}</small>
                    </div>
                </div>
            </a>
        </li>
        {{/each}}
        {{else}}
        <li class="text-center py-4 text-muted">
            <i class="fas fa-bell-slash d-block mb-2"></i>
            <small>No new notifications</small>
        </li>
        {{/if}}
    </ul>
</div>