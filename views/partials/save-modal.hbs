<div class="modal fade" id="saveModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content border-0 shadow" style="overflow: hidden; border-radius: 15px;">

            <div class="modal-header bg-light border-0 py-2">
                <h6 class="modal-title fw-bold mx-auto">Save to...</h6>
            </div>

            <div class="modal-body p-0">
                {{#if collections}}
                <div class="list-group list-group-flush">
                    {{#each collections}}
                    <form action="/collections/save" method="POST" class="m-0 p-0">
                        <input type="hidden" name="_csrf" value="{{../csrfToken}}">
                        <input type="hidden" name="postId" class="dynamic-post-id">
                        <input type="hidden" name="collectionId" value="{{_id}}">

                        <button type="submit"
                            class="list-group-item list-group-item-action d-flex justify-content-between align-items-center py-3 border-0 border-bottom">
                            <span class="fw-bold text-dark"><i class="fas fa-folder text-warning me-2"></i>
                                {{name}}</span>
                            <i class="fas fa-chevron-right text-muted small"></i>
                        </button>
                    </form>
                    {{/each}}
                </div>
                {{else}}
                <div class="text-center py-4 px-3">
                    <p class="text-muted small mb-0">No folders yet.</p>
                </div>
                {{/if}}

                <div class="p-3 bg-light">
                    <button class="btn btn-outline-primary w-100 rounded-pill btn-sm fw-bold" type="button"
                        data-bs-toggle="collapse" data-bs-target="#createNewCollapse">
                        <i class="fas fa-plus me-1"></i> New Collection
                    </button>

                    <div class="collapse mt-2" id="createNewCollapse">
                        <form action="/collections/save" method="POST">
                            <input type="hidden" name="_csrf" value="{{csrfToken}}">
                            <input type="hidden" name="postId" class="dynamic-post-id">

                            <div class="input-group">
                                <input type="text" name="newCollectionName" class="form-control form-control-sm"
                                    placeholder="Name (e.g. Travel)" required>
                                <button class="btn btn-primary btn-sm" type="submit">Save</button>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<script>
    function openSaveModal(postId) {
        // Modal açıldığında sayfadaki ilgili postun ID'sini tüm formlara dağıtır
        const inputs = document.querySelectorAll('.dynamic-post-id');
        inputs.forEach(input => {
            input.value = postId;
        });

        var myModal = new bootstrap.Modal(document.getElementById('saveModal'));
        myModal.show();
    }
</script>