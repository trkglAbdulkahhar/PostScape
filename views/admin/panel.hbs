<div class="card shadow border-danger">
    <div class="card-header bg-danger text-white">
        <h3 class="mb-0">üõ°Ô∏è Admin Panel</h3>
    </div>
    <div class="card-body">
        <div class="row mb-4">
            <div class="col-md-12">
                <a href="/admin/messages" class="btn btn-dark w-100 py-3 shadow-sm">
                    <h4 class="mb-0"><i class="fas fa-comments me-2"></i>Monitor User Messages</h4>
                    <small>View all private conversations</small>
                </a>
            </div>
        </div>
        <h5 class="mb-3">Content Moderation (All Posts)</h5>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each posts}}
                    <tr>
                        <td>{{title}}</td>
                        <td>{{user.name}}</td>
                        <td>{{formatDate createdAt}}</td>
                        <td>
                            <div class="d-flex gap-2">
                                <a href="/posts/{{slug}}?adminMode=true" class="btn btn-sm btn-info text-white"
                                    title="View Post (Admin Mode)">
                                    <i class="fas fa-eye"></i>
                                </a>

                                <a href="/admin/posts/edit/{{_id}}" class="btn btn-sm btn-warning text-white"
                                    title="Edit Post">
                                    <i class="fas fa-edit"></i>
                                </a>

                                <form id="delete-form-{{_id}}" action="/admin/delete/{{_id}}" method="POST"
                                    class="d-inline">
                                    <input type="hidden" name="_csrf" value="{{../csrfToken}}">
                                    <button type="button" class="btn btn-sm btn-danger" title="Delete"
                                        onclick="openDeleteModal('delete-form-{{_id}}', '{{title}}')">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Elegant Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg" style="border-radius: 16px; overflow: hidden;">
            <div class="modal-header bg-danger text-white border-0">
                <h5 class="modal-title fw-bold">
                    <i class="fas fa-exclamation-triangle me-2"></i>Confirmation Required
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>
            <div class="modal-body p-4 text-center">
                <div class="mb-3">
                    <i class="fas fa-trash-alt fa-3x text-danger opacity-50"></i>
                </div>
                <h5 class="fw-bold mb-2">Are you sure?</h5>
                <p class="text-muted mb-0">You are about to delete <strong id="deleteItemName"
                        class="text-dark">item</strong>.</p>
                <p class="text-muted small">This action cannot be undone.</p>
            </div>
            <div class="modal-footer border-0 justify-content-center pb-4">
                <button type="button" class="btn btn-light rounded-pill px-4 fw-bold"
                    data-bs-dismiss="modal">Cancel</button>
                <button type="button" id="confirmDeleteBtn" class="btn btn-danger rounded-pill px-4 fw-bold shadow-sm">
                    <i class="fas fa-trash me-2"></i>Yes, Delete It
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Backdrop Blur & Script -->
<style>
    .modal-backdrop.show {
        backdrop-filter: blur(5px);
        -webkit-backdrop-filter: blur(5px);
        opacity: 0.5;
    }
</style>

<script>
    let targetForm = null;

    function openDeleteModal(formId, itemName) {
        targetForm = document.getElementById(formId);
        document.getElementById('deleteItemName').textContent = itemName || 'this item';

        const myModal = new bootstrap.Modal(document.getElementById('deleteModal'));
        myModal.show();
    }

    document.getElementById('confirmDeleteBtn').addEventListener('click', function () {
        if (targetForm) {
            targetForm.submit();
        }
    });
</script>