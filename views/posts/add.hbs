<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header bg-white">
                <h5 class="mb-0">Create a Post</h5>
            </div>
            <div class="card-body">
                <form action="/posts" method="POST" enctype="multipart/form-data">
                    <input type="hidden" name="_csrf" value="{{csrfToken}}">

                    <div class="mb-3">
                        <label class="form-label text-muted">Title</label>
                        <input type="text" name="title" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-muted">Upload Image (Optional)</label>
                        <input type="file" name="image" class="form-control">
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-muted">Tags</label>
                        <input type="text" name="tags" class="form-control"
                            placeholder="e.g. tech, life (comma separated)">
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-muted">What's on your mind?</label>
                        <textarea name="body" class="form-control" rows="3" required></textarea>
                    </div>

                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary px-4">Post</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>