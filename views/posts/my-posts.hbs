<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-0"><i class="fas fa-file-alt text-primary me-2"></i>My Posts</h2>
            <p class="text-muted small mb-0">Manage the content you've shared.</p>
        </div>
    </div>

    {{#if posts}}
    <div class="row g-4">
        {{#each posts}}
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm border-0 post-card-hover">
                <div class="position-absolute top-0 end-0 p-2">
                    <div class="dropdown">
                        <button class="btn btn-light btn-sm rounded-circle shadow-sm" type="button"
                            data-bs-toggle="dropdown">
                            <i class="fas fa-ellipsis-v text-secondary"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="/posts/edit/{{_id}}"><i
                                        class="fas fa-edit me-2"></i>Edit</a></li>
                            <li>
                                <form action="/posts/delete/{{_id}}" method="POST" class="d-inline">
                                    <input type="hidden" name="_csrf" value="{{../csrfToken}}">
                                    <button type="submit" class="dropdown-item text-danger"><i
                                            class="fas fa-trash-alt me-2"></i>Delete</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>

                <a href="/posts/{{slug}}" class="text-decoration-none text-dark h-100 d-flex flex-column">
                    {{#if image}}
                    <div
                        style="height: 200px; overflow: hidden; border-top-left-radius: 5px; border-top-right-radius: 5px;">
                        <img src="{{image}}" class="w-100 h-100" style="object-fit: cover;" alt="Post Image">
                    </div>
                    {{else}}
                    <div
                        style="height: 200px; background-color: #f8f9fa; display: flex; align-items: center; justify-content: center; color: #adb5bd;">
                        <i class="fas fa-image fa-3x"></i>
                    </div>
                    {{/if}}

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold text-truncate">{{title}}</h5>
                        <p class="card-text text-secondary truncate-3-lines mb-4 flex-grow-1">{{body}}</p>

                        <div
                            class="d-flex justify-content-between align-items-center mt-auto text-muted small border-top pt-3">
                            <span><i class="far fa-heart me-1"></i> {{likes.length}}</span>
                            <span><i class="far fa-comment me-1"></i> {{comments.length}}</span>
                            <span>{{formatDate createdAt}}</span>
                        </div>
                    </div>
                </a>
            </div>
        </div>
        {{/each}}
    </div>
    {{else}}
    <div class="text-center py-5">
        <div class="mb-3">
            <i class="fas fa-folder-open fa-4x text-muted opacity-25"></i>
        </div>
        <h4 class="text-muted">You haven't posted anything yet.</h4>
        <p class="text-muted">Share your thoughts with the world!</p>
        <a href="/posts/add" class="btn btn-primary mt-2">Create Your First Post</a>
    </div>
    {{/if}}
</div>