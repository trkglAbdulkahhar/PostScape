<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-1">
                    <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Collection</li>
                </ol>
            </nav>
            <h2 class="fw-bold mb-0">
                {{collection.name}}
            </h2>
            <p class="text-muted small mb-0">{{collection.posts.length}} saved items</p>
        </div>
        <a href="/dashboard" class="btn btn-outline-secondary btn-sm">Back</a>
    </div>

    {{#if collection.posts}}
    <div class="row g-4">
        {{#each collection.posts}}
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm border-0 post-card-hover">
                <a href="/posts/{{_id}}" class="text-decoration-none text-dark h-100 d-flex flex-column">
                    {{#if image}}
                    <div
                        style="height: 200px; overflow: hidden; border-top-left-radius: 5px; border-top-right-radius: 5px;">
                        <img src="{{image}}" class="w-100 h-100" style="object-fit: cover;" alt="Post">
                    </div>
                    {{/if}}
                    <div class="card-body d-flex flex-column">
                        <small class="text-muted mb-1">By {{user.name}}</small>
                        <h5 class="card-title fw-bold text-truncate">{{title}}</h5>
                        <p class="card-text text-secondary truncate-3-lines mb-0">{{body}}</p>
                    </div>
                </a>
            </div>
        </div>
        {{/each}}
    </div>
    {{else}}
    <div class="text-center py-5">
        <p class="text-muted">This folder is empty.</p>
        <a href="/feed" class="btn btn-primary">Find Posts to Save</a>
    </div>
    {{/if}}
</div>